{
  "name": "shards-syntax",
  "displayName": "Shards language support",
  "description": "Language support for the Shards programming language.",
  "publisher": "fragcolor",
  "url": "https://github.com/fragcolor-xyz/vscode-shards-syntax",
  "license": "BSD-3-Clause",
  "version": "0.0.13",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/fragcolor-xyz/vscode-shards-syntax.git"
  },
  "engines": {
    "vscode": "^1.84.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "commands": [
      {
        "command": "shards.restartLangServer",
        "title": "shards: Restart Language Server"
      }
    ],
    "configuration": {
      "title": "Shards",
      "properties": {
        "shards.path": {
          "type": "string",
          "default": "/usr/local/bin/shards",
          "description": "Full path to the 'shlang' executable"
        }
      }
    },
    "languages": [
      {
        "id": "shards",
        "aliases": [
          "Shards",
          "shards"
        ],
        "extensions": [
          ".shs"
        ],
        "configuration": "./highlight/language-configuration.json"
      }
    ],
    "configurationDefaults": {
      "[shards]": {
        "editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",<>/?"
      }
    },
    "grammars": [
      {
        "language": "shards",
        "scopeName": "source.shards",
        "path": "./highlight/shards.tmLanguage.json"
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.3",
    "@types/node": "18.x",
    "@types/vscode": "^1.84.0",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}