{
	"name": "shards",
	"displayName": "Shards Language Support",
	"description": "Language support for the Shards programming language.",
	"version": "2.4.3",
	"publisher": "fragcolor",
	"repository": {
		"type": "git",
		"url": "https://github.com/fragcolor-xyz/vscode-shards.git"
	},
	"url": "https://github.com/fragcolor-xyz/vscode-shards",
	"author": "Fragcolor and contributors",
	"license": "BSD-3-Clause",
	"icon": "logo.png",
	"categories": [
		"Programming Languages"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onDebugResolve:shards",
		"onDebugDynamicConfigurations:shards"
	],
	"contributes": {
		"configuration": {
			"title": "Shards",
			"properties": {
				"shards.shardsPath": {
					"type": "string",
					"default": "shards",
					"description": "Path to the Shards executable"
				},
				"shards.includePaths": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [],
					"description": "Additional include paths for Shards files (similar to -I compiler option)"
				}
			}
		},
		"configurationDefaults": {
			"[shards]": {
				"editor.wordSeparators": "`~!@#$%^&*()=+[{]}\\|;:'\",<>/?"
			}
		},
		"languages": [
			{
				"id": "shards",
				"aliases": [
					"Shards",
					"shards"
				],
				"extensions": [
					".shs"
				],
				"configuration": "./highlight/language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "shards",
				"scopeName": "source.shards",
				"path": "./highlight/shards.tmLanguage.json"
			}
		],
		"commands": [
			{
				"command": "shards.reload",
				"title": "Shards: Reload Extension"
			},
			{
				"command": "shards.showRuntimeInstances",
				"title": "Shards: Show Runtime Instances",
				"icon": "$(debug-alt)"
			},
			{
				"command": "shards.attachToInstance",
				"title": "Attach Debugger",
				"icon": "$(debug-alt)"
			},
			{
				"command": "shards.selectAndAttachToInstance",
				"title": "Shards: Select and Attach to Instance",
				"icon": "$(debug-alt)"
			}
		],
		"viewsContainers": {
			"panel": [
				{
					"id": "shards",
					"title": "Shards",
					"icon": "$(debug-alt)"
				}
			]
		},
		"views": {
			"shards": [
				{
					"id": "shardsRuntimeInstances",
					"name": "Runtime Instances",
					"when": "true"
				}
			]
		},
		"menus": {
			"commandPalette": [
				{
					"command": "shards.attachToInstance",
					"when": "false"
				}
			],
			"view/item/context": [
				{
					"command": "shards.attachToInstance",
					"when": "view == shardsRuntimeInstances && viewItem == runtimeInstance",
					"group": "inline"
				}
			]
		},
		"breakpoints": [
			{
				"language": "shards"
			}
		],
		"debuggers": [
			{
				"type": "shards",
				"languages": [
					"shards"
				],
				"label": "Shards Debug",
				"program": "./out/debugAdapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"attach": {
						"required": [],
						"properties": {
							"port": {
								"type": "number",
								"description": "Debug server port.",
								"default": 57427
							},
							"address": {
								"type": "string",
								"description": "Debug server address.",
								"default": "127.0.0.1"
							},
							"maxRetries": {
								"type": "number",
								"description": "Maximum number of connection attempts before giving up.",
								"default": 10
							},
							"retryInterval": {
								"type": "number",
								"description": "Time to wait between connection attempts (in milliseconds).",
								"default": 2000
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "shards",
						"request": "attach",
						"name": "Attach to Shards Debug Server",
						"port": 57427,
						"address": "127.0.0.1",
						"maxRetries": 10,
						"retryInterval": 2000
					}
				],
				"configurationSnippets": [
					{
						"label": "Shards Debug: Attach",
						"description": "Attach to a running Shards debug server.",
						"body": {
							"type": "shards",
							"request": "attach",
							"name": "Attach to Shards Debug Server",
							"port": 57427,
							"address": "127.0.0.1",
							"maxRetries": 10,
							"retryInterval": 2000
						}
					}
				],
				"variables": {
					"AskForProgramName": "extension.mock-debug.getProgramName"
				}
			}
		]
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "npm run compile-prod",
		"compile": "tsc -watch -p ./",
		"compile-prod": "tsc -p ./",
		"lint": "eslint src --ext ts"
	},
	"devDependencies": {
		"@types/node": "22.9.3",
		"@types/vscode": "^1.75.0",
		"typescript": "^5.3.0",
		"eslint": "9.15.0",
		"@typescript-eslint/parser": "8.15.0",
		"@typescript-eslint/eslint-plugin": "8.15.0",
		"vsce": "^2.15.0"
	}
}